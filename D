<body>

<div id="panel">
    <h1>DE7 CHEATS</h1>

    <div class="section">
        <button onclick="toggle(this)">ESP Esqueleto</button>
        <button onclick="toggle(this)">ESP Box</button>
        <button onclick="toggle(this)">ESP Vida</button>
    </div>

    <div class="section">
        <button onclick="toggle(this)">Cabeça</button>
        <button onclick="toggle(this)">Pescoço</button>
        <button onclick="toggle(this)">Peito</button>
    </div>

    <div class="section">
        <label>Precisão</label>
        <input type="range" min="0" max="100" onchange="resetInject()">

        <label>Distância</label>
        <input type="range" min="0" max="500" onchange="resetInject()">
    </div>

    <button class="inject" onclick="inject()">INJETAR</button>
    <div id="status"></div>
</div>

<script>
let injected = false;
let injecting = false;

function toggle(btn) {
    btn.classList.toggle("active");
    resetInject();
}

function inject() {
    if (injecting) return;

    injecting = true;
    injected = false;

    const status = document.getElementById("status");
    status.style.color = "#ff0";
    status.innerText = "Injetando código...";

    setTimeout(() => {
        status.style.color = "#0f0";
        status.innerText = "Códigos injetados com sucesso";
        injecting = false;
        injected = true;
    }, 5000);
}

function resetInject() {
    if (injecting || injected) {
        document.getElementById("status").innerText = "";
        injecting = false;
        injected = false;
    }
}
</script>

